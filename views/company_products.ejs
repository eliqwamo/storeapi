<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>

    <%- include('./navbar.ejs')%>


    <div class="container" style="margin-top: 50px;">
        <div class="row">

            <div class="col-lg-12">
                <h5>Products list</h5><br/>

                <table class="table table-striped">
                    <thead>
                        <tr>
                          <th scope="col">id</th>
                          <th>Image</th>
                          <th scope="col">Product name</th>
                          <th>Price</th>
                          <th>In Stock</th>
                          <th>Actions</th>
                        </tr>
                      </thead>

                      <tbody>
                        <%if(products.length > 0){%>
                            <%for(let product of products){%>
                                <tr>
                                    <td scope="row"><%= product.id %></td>
                                    <td><img style="width:120px" src="<%= product.productImage%>" /></td>
                                    <td><%= product.productName %></td>
                                    <td>$<%= product.productPrice %></td>
                                    <td>
                                        <%= product.unitInStock %>
                                    </td>
                                    <td>
                                        <a href="/admin/products/<%= product.id %>" 
                                            class="btn btn-outline-info btn-sm">Edit</a>
                                        <a href="/admin/remove_product/<%= product.id %>"
                                            onclick="return confirm('Confirm product delete?');" 
                                            class="btn btn-outline-danger btn-sm">Delete</a>
                                        <a href="/admin/products/orders/<%= product.id %>" 
                                            class="btn btn-outline-success btn-sm">Orders</a>
                                    </td>
                                  </tr>
                            <%}%>
                        <%} else {%>
                            <p>No categories found</p>
                        <%}%>
                        
                      </tbody>
                </table>



            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>