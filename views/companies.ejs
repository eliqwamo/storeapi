<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>

    <%- include('./navbar.ejs')%>


    <div class="container" style="margin-top: 50px;">
        <div class="row">
            <div class="col-lg-3">
                <h5>Add new Company</h5><br/>
                <form method="post" action="/admin/create_new_company">
                    <label for="categoryName" class="form-label">Company name</label>
                    <input type="text" class="form-control" name="companyName" id="companyName"><br/>

                    <label for="companyLogo" class="form-label">Company logo</label>
                    <input type="text" class="form-control" name="companyLogo" id="companyLogo"><br/>

                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" id="address"><br/>

                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" name="city" id="city"><br/>

                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" name="phone" id="phone"><br/>

                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" name="email" id="email"><br/>

                    <button type="submit" class="btn btn-info">ADD</button>
                </form>
            </div>
            <div class="col-lg-9">
                <h5>Companies list</h5><br/>

                <table class="table table-striped">
                    <thead>
                        <tr>
                          <th scope="col">id</th>
                          <th>Logo</th>
                          <th scope="col">Company name</th>
                          <th>Email</th>
                          <th>Actions</th>
                        </tr>
                      </thead>

                      <tbody>
                        <%if(companiesAndProducts.length > 0){%>
                            <%for(let company of companiesAndProducts){%>
                                <tr>
                                    <td scope="row"><%= company.companyInfo.id %></td>
                                    <td><img style="width: 50px;" src="<%= company.companyInfo.companyLogo%>" /></td>
                                    <td><%= company.companyInfo.companyName %></td>
                                    <td><%= company.companyInfo.email %></td>
                                    <td>
                                        <a href="/admin/companies/<%= company.companyInfo.id %>" 
                                            class="btn btn-outline-info btn-sm">Edit</a>
                                        <a href="/admin/remove_company/<%= company.companyInfo.id %>"
                                            onclick="return confirm('Confirm company delete?');" 
                                            class="btn btn-outline-danger btn-sm">Delete</a>
                                        <a href="/admin/companies/products/<%= company.companyInfo.id %>" 
                                            class="btn btn-outline-success btn-sm"><%= company.products.length %> Products</a>
                                    </td>
                                  </tr>
                            <%}%>
                        <%} else {%>
                            <p>No categories found</p>
                        <%}%>
                        
                      </tbody>
                </table>



            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>